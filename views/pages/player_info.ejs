<% include ../partials/header %>
<% include ../partials/menu %>
<div class="container">
	<br>
	<div class="row">
		<div class="col-4">
			<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				<% 
				  img_src = playerIDInfo[0].img_src
				%>
				<img class="card-img-top" id="player_img" src="<%- img_src %>" alt="Image of Football Player">
				<div class="card-body mx-auto">
					<form class="form" action="/player_info/select_player" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							<option selected>Select Player</option>
							<% 
							var options = ''
							if (dataPlayers){
								dataPlayers.forEach(player => {
									options += `<option value="${player.id}">` + player.name +
										`</option>`
									
								});
							

							}
							%>
							<%-options%>


							<!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id, 
										 but will display the player's name-->

						</select>
					</form>
				</div>
			</div>
		</div>
		<div class="col-8">
			<div class="table-responsive">
				<table class="table">
					<tr>
						<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
						<th>Year</th>
						<td><% 
						var year = playerIDInfo[0].year%>
							<%-year%></td>
					</tr>
					<tr>
						<th>Major</th>
						<td><% 
						var major = playerIDInfo[0].major%>
							<%-major%></td>
					</tr>
					<tr>
						<th>Games Played</th>
						<td><% 
							console.log(totalGamesPlayed[0].count)
						var gamesPlayed = totalGamesPlayed[0].count%>
							<%-gamesPlayed%></td>
					</tr>
					<tr>
						<td>Passing Yards: </td>
						<td>Avg. Passing Yards: </td>
					</tr>
					<tr>
						<td>Rushing Yards: </td>
						<td>Avg. Rushing Yards: </td>
					</tr>
					<tr>
						<td>Receiving Yards: </td>
						<td>Avg. Receiving Yards: </td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>